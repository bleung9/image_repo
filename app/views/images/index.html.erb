<p id="notice"><%= notice %></p>

<h1>Images</h1>

<h4>Search by image characteristic</h4>

  <%= form_with(url: images_path, local: true, method: :get) do |form| %>
    <div class="field">
      <%= form.label :file_format %>
      <%= form.text_field :search_format %>
    </div>

    <div class="field">
      <%= form.label :width %>
      <%= form.text_field :search_width %>
    </div>

    <div class="field">
      <%= form.label :height %>
      <%= form.text_field :search_height %>
    </div>    
    
    <div class="field">
      <%= form.label :text_search %>
      <%= form.text_field :search_text %>
    </div>
    
    <div class="actions">
      <%= form.submit "Search" %>
    </div>
  <% end %>

  <br>
  <br>

  <%= form_with(url: similar_images_path, local: true) do |form| %>
    <div class="field">
      <%= form.label :get_similar_images %>
      <%= form.file_field :image %>
    </div>
    
    <div class="actions">
      <%= form.submit "Search" %>
    </div>
  <% end %>
  
  <br>
  <br>

  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Width</th>
        <th>Height</th>
        <th>Extension</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.image %></td>
          <td><%= image.width %></td>
          <td><%= image.height %></td>
          <td><%= image.extension %></td>
          <td><%= link_to 'Show', image %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Image', new_image_path %>
